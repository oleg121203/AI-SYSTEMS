{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn", // Попереджати про невикористані змінні
    "no-undef": "warn" // Попереджати про невизначені змінні
  }
}
