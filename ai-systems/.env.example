# AI-SYSTEMS Environment Configuration
# This file contains all environment variables used by the AI-SYSTEMS application

###########################################
# AI Provider API Keys                    #
###########################################
# OpenAI API Keys (supports multiple keys)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI2_API_KEY=your_second_openai_api_key_here

# Anthropic API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC2_API_KEY=your_second_anthropic_api_key_here

# Mistral API Keys
MISTRAL_API_KEY=your_mistral_api_key_here
MISTRAL2_API_KEY=your_second_mistral_api_key_here

# Codestral API Keys
CODESTRAL_API_KEY=your_codestral_api_key_here
CODESTRAL2_API_KEY=your_second_codestral_api_key_here

# Google API Keys
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE2_API_KEY=your_second_google_api_key_here

###########################################
# GitHub Integration                      #
###########################################
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_REPO=oleg121203/AI-SYSTEMS-REPO
GIT_USER_NAME=Oleg Kizyma
GIT_USER_EMAIL=oleg1203@gmail.com
MAIN_BRANCH=main
REPOSITORY_PATH=~/workspace/AI-SYSTEMS-REPO

###########################################
# Database Configuration                  #
###########################################
DB_HOST=postgres
DB_PORT=5432
DB_NAME=ai_systems
DB_USER=postgres
DB_PASSWORD=postgres

###########################################
# Message Broker Configuration            #
###########################################
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

###########################################
# Redis Configuration                     #
###########################################
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

###########################################
# Service Ports                           #
###########################################
# Web Services
WEB_PORT=8001
FRONTEND_PORT=3000
WEBSOCKET_PORT=8001

# AI Services
AI_CORE_PORT=7861
DEV_AGENTS_PORT=7862
PROJECT_MANAGER_PORT=7863
CMP_PORT=7864
GIT_SERVICE_PORT=7865

###########################################
# Logging Configuration                   #
###########################################
LOG_LEVEL=INFO
LOGS_PATH=./logs

###########################################
# Metrics & Monitoring                    #
###########################################
ENABLE_METRICS=true
METRICS_PORT=9090

###########################################
# Volume Paths                            #
###########################################
POSTGRES_DATA_PATH=./data/postgres
REDIS_DATA_PATH=./data/redis
RABBITMQ_DATA_PATH=./data/rabbitmq

###########################################
# Docker Compose Profiles                 #
###########################################
# Available profiles: infrastructure, ai, web, management, monitoring, full
# To use specific profiles: docker-compose --profile web --profile ai up
DEFAULT_PROFILE=full
